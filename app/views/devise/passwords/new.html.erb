<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "session", method: :post }) do |f| %>
  <div>
    <h2>Forgot your password?</h2>

    <div class="session__inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  placeholder: "Email",
                  label_html: { class: "visually-hidden" },
                  input_html: { autocomplete: "email" } %>

      <%= f.button :submit, "Send Reset Instructions", class: "btn btn--primary" %>
    </div>

    <div class="session__shared-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
